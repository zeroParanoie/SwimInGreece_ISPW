<BorderPane maxHeight="600.0" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <AnchorPane prefHeight="569.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
            <ImageView fitHeight="625.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <effect>
                    <BoxBlur />
