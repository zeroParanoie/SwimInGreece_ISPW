<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.BoxBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="600.0" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <ImageView fitHeight="640.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <effect>
                    <BoxBlur />
                </effect>
                <Image url="@../misc/GreeceBG.jpg" />
            </ImageView>
            <VBox layoutX="75.0" layoutY="20.0" prefHeight="448.0" prefWidth="850.0" styleClass="logo_container" stylesheets="@style1.css" AnchorPane.bottomAnchor="140.0" AnchorPane.topAnchor="50.0">
                <TableView fx:id="tableView" prefHeight="300.0" prefWidth="810.0" style="-fx-background-radius: 3">
                    <columns>
                        <TableColumn fx:id="tourCol" prefWidth="405.0" text="Tour" />
                        <TableColumn fx:id="placeCol" prefWidth="404.0" text="Place" />
                        <TableColumn fx:id="ratingCol" minWidth="0.0" prefWidth="0.0" />
                    </columns>
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="50.0" />
                    </VBox.margin>
                </TableView>
                <HBox prefHeight="0.0" prefWidth="850.0">
                    <Button fx:id="submitBtn" mnemonicParsing="false" style="-fx-cursor: hand;" text="Back to trips">
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="CALENDAR" />
                        </graphic>
                        <HBox.margin>
                            <Insets bottom="10.0" left="310.0" />
                        </HBox.margin>
                    </Button>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
            </VBox>
        </AnchorPane>
    </center>
    <top>
        <HBox fx:id="navbar" prefHeight="75.0" prefWidth="200.0" style="-fx-spacing: 20;" styleClass="navbar" stylesheets="@style1.css" BorderPane.alignment="CENTER">
            <Button fx:id="homeBtn" mnemonicParsing="false" text="Home">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <HBox.margin>
                    <Insets left="20.0" top="10.0" />
                </HBox.margin>
                <graphic>
                    <FontAwesomeIconView glyphName="HOME" />
                </graphic>
            </Button>
            <Button fx:id="loginBtn" mnemonicParsing="false" text="Login">
                <HBox.margin>
                    <Insets top="10.0" />
                </HBox.margin>
                <graphic>
                    <FontAwesomeIconView glyphName="USER" />
                </graphic>
            </Button>
            <Button fx:id="bookBtn" mnemonicParsing="false" style="-fx-background-color: linear-gradient(#5FCBDE, #5FCBBE);" text="Book a trip">
                <HBox.margin>
                    <Insets top="10.0" />
                </HBox.margin>
                <graphic>
                    <FontAwesomeIconView />
                </graphic>
            </Button>
            <ImageView fitHeight="70.0" fitWidth="291.0" pickOnBounds="true" preserveRatio="true">
                <HBox.margin>
                    <Insets left="150.0" top="15.0" />
                </HBox.margin>
                <Image url="@../misc/logo.png" />
            </ImageView>
        </HBox>
    </top>
</BorderPane>
