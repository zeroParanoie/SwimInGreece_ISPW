                    <columns>
                        <TableColumn fx:id="tourCol" prefWidth="405.0" text="Tour" />
                        <TableColumn fx:id="placeCol" prefWidth="404.0" text="Place" />
                        <TableColumn fx:id="ratingCol" minWidth="0.0" prefWidth="0.0" />
                    </columns>
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="50.0" />
                    </VBox.margin>
                </TableView>
                <HBox prefHeight="0.0" prefWidth="850.0">
                    <Button fx:id="submitBtn" mnemonicParsing="false" style="-fx-cursor: hand;" text="Back to trips">
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="CALENDAR" />
                        </graphic>
                        <HBox.margin>
                            <Insets bottom="10.0" left="140.0" />
                        </HBox.margin>
                    </Button>
               <Button fx:id="backBtn" mnemonicParsing="false" style="-fx-cursor: hand;" text="Back to personal area">
                  <graphic>
                     <FontAwesomeIconView fill="WHITE" glyphName="INFO" />
                  </graphic>
                  <HBox.margin>
                     <Insets left="30.0" />
                  </HBox.margin>
               </Button>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
            </VBox>
        </AnchorPane>
    </center>
</BorderPane>
