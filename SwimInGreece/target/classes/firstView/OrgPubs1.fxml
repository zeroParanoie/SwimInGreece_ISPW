            <VBox layoutX="75.0" layoutY="20.0" prefHeight="448.0" prefWidth="850.0" styleClass="logo_container" stylesheets="@style1.css" AnchorPane.bottomAnchor="80.0" AnchorPane.topAnchor="80.0">
